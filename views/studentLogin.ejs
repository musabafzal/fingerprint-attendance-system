    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

	<div class="container-fluid">
    <div class="jumbotron" style="font-family: courier new; color: grey">
      <h2 style="text-align: center">STUDENT LOGIN</h2>

<form action="/login/student" method="post">

  <div class="container">
    <label><b>ID</b></label>
    <input type="text" placeholder="Enter ID" name="id" required>

    <label><b>Password</b></label>
    <input type="password" placeholder="Enter Password" name="password" required>
    <button type="submit" style="background-color: #8ed0be">LOGIN</button>
  </div>
</form>

