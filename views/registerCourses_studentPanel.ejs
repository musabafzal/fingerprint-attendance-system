    <!-- /.container -->
    <a href="/logout"><button type="button" class="fix btn btn-default">Logout</button></a>
    <a href="/panel/student"><button type="button" class="left btn btn-default">Panel</button></a>
    <style>
      .fix {
        position: absolute;
        top: 2%;
        right: 2%;
      }

      .left {
        position: absolute;
        top: 2%;
        left: 2%;
      }
    </style>

    <script type="text/javascript">
      $(document).ready(function () {
        $(".slots").select2();
      });
      function myfunction(value, num) {
        var i = num + 1;
        while (i <= 9) {

          $("#slot" + i + " option[value=" + value + "]").remove();
          i++;
        }
      }
    </script>
