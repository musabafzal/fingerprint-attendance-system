    <script type="text/javascript">
      $(document).ready(function () {
        $(".slots").select2();
      });
      function myfunction(value, num) {
        var i = num + 1;
        while (i <= 9) {

          $("#slot" + i + " option[value=" + value + "]").remove();
          i++;
        }
      }
    </script>
